# Sample direnv environment for Thunderline dev
# Copy to .envrc then run: direnv allow

# Use container-mapped Postgres port
export PGHOST=127.0.0.1
export PGPORT=5433
export PGUSER=postgres
export PGPASSWORD=postgres
export PGDATABASE=thunderline
# Unified DATABASE_URL for Ecto/Ash
export DATABASE_URL="ecto://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}"

# Optional: skip full Ash setup when running lightweight tests
# export SKIP_ASH_SETUP=true

# Flags for optional subsystems
# export ENABLE_NDJSON=1
# export ENABLE_SIGNAL_STACK=1
# export ENABLE_UPS=1
