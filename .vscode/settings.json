{
    // Force VS Code on Linux/WSL to use bash instead of searching for PowerShell
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash"
        }
    },
    // Enable full ElixirLS features (Dialyzer + deps fetch) for richer type analysis.
    "elixirLS.dialyzerEnabled": true,
    "elixirLS.fetchDeps": true,
    // Place PLTs in priv/plts (cached by CI). Dialyzer will build if not present.
    "elixirLS.dialyzerFormatter": "dialyzer",
    // Stop automatic test runs if extension installed (optional noise reduction)
    "elixirLS.projectDir": "./",
    // Format on save for Elixir & heex
    "editor.formatOnSave": true,
    "[elixir]": {
        "editor.defaultFormatter": "JakeBecker.elixir-ls"
    },
    // Avoid PowerShell prompts in tasks
    "task.allowAutomaticTasks": "on",
    // Keep watcher excludes but allow Dialyzer to traverse specs (it reads BEAMs anyway)
    "files.watcherExclude": {
        "**/.elixir_ls/**": true
    }
}