    height: 8px;
    border-radius: 50%;
    margin-top: auto;
    align-self: flex-end;
  }

  .pulse-dot.active {
    background: #10b981;
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .pulse-dot.warning {
    background: #f59e0b;
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .domain-icon {
    cursor: pointer;
    padding: 4px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .domain-icon:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.1);
  }

  /* 3D Hex Grid Styles */
  .hex-grid-3d {
    perspective: 1000px;
    transform-style: preserve-3d;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: float 6s ease-in-out infinite;
  }

  .hex-layer {
    position: absolute;
    transform-style: preserve-3d;
  }

  .hex-ring {
    position: relative;
    transform-style: preserve-3d;
  }

  .hex {
    position: absolute;
    width: 30px;
    height: 26px;
    background: rgba(59, 130, 246, 0.3);
    border: 2px solid rgba(59, 130, 246, 0.6);
    transform-style: preserve-3d;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hex:before {
    content: '';
    position: absolute;
    top: -9px;
    left: 0;
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-bottom: 9px solid rgba(59, 130, 246, 0.6);
  }

  .hex:after {
    content: '';
    position: absolute;
    bottom: -9px;
    left: 0;
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-top: 9px solid rgba(59, 130, 246, 0.6);
  }

  .hex.active {
    background: rgba(34, 197, 94, 0.4);
    border-color: rgba(34, 197, 94, 0.8);
    box-shadow: 0 0 20px rgba(34, 197, 94, 0.4);
  }

  .hex.active:before {
    border-bottom-color: rgba(34, 197, 94, 0.8);
  }

  .hex.active:after {
    border-top-color: rgba(34, 197, 94, 0.8);
  }

  .hex-glow {
    position: absolute;
    inset: -4px;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.3) 0%, transparent 70%);
    animation: pulse 3s ease-in-out infinite;
    pointer-events: none;
  }

  /* Hex positioning for proper hexagonal grid */
  .hex[data-coord="0,0,0"] { transform: translate(0px, 0px); }
  .hex[data-coord="1,0,-1"] { transform: translate(45px, 0px); }
  .hex[data-coord="0,1,-1"] { transform: translate(22px, -38px); }
  .hex[data-coord="-1,1,0"] { transform: translate(-22px, -38px); }
  .hex[data-coord="-1,0,1"] { transform: translate(-45px, 0px); }
  .hex[data-coord="0,-1,1"] { transform: translate(-22px, 38px); }
  .hex[data-coord="1,-1,0"] { transform: translate(22px, 38px); }

  .hex[data-coord="2,0,-2"] { transform: translate(90px, 0px); }
  .hex[data-coord="1,1,-2"] { transform: translate(67px, -38px); }
  .hex[data-coord="0,2,-2"] { transform: translate(45px, -76px); }
  .hex[data-coord="-1,2,-1"] { transform: translate(-45px, -76px); }

  .hex[data-coord="0,0,2"] { transform: translate(0px, 0px); }

  .hex:hover {
    transform: translateZ(10px) scale(1.1);
    background: rgba(168, 85, 247, 0.4);
    border-color: rgba(168, 85, 247, 0.8);
    box-shadow: 0 0 25px rgba(168, 85, 247, 0.5);
